{
  "compilerOptions": {
    "allowJs": true /* Allow JavaScript files to be compiled */,
    "target": "ES2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "strictNullChecks": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "dist/**/*.js" /* Include JavaScript files in compilation */
  ],
  "exclude": ["node_modules", ".serverless", ".vscode", ".idea"]
}
